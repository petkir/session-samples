# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=wss://agentconviekpp.openai.azure.com
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime
AZURE_OPENAI_REALTIME_VOICE_CHOICE=alloy
